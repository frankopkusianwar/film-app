<!-- Side navigation -->
<% if logged_in? %>
  <div class="sidenav">
    <div class="d-flex">
      <div class="ml-2">
        <p class="text-muted prof-img-2">
          <%= image_tag current_user.image, class: "mr-2" if current_user.image.attached? %><%= current_user.name %>
        </p>
      </div>
    </div>
    <%= render 'opinions/stats' %>
      <div class="d-flex <%= current_class?(opinions_path)%>"><i class="fa fa-home mt-3 ml-2 text-muted"></i><%= link_to 'Home', opinions_path %></div>
      <div class="d-flex <%= current_class?(user_path(current_user))%>"><i class="fa fa-user mt-3 ml-2 text-muted"></i><%= link_to 'Profile', user_path(current_user) %></div>
  </div>
  <% elsif admin_logged_in? %>
    <div class="sidenav">
      <div class="d-flex">
        <div class="ml-2">
          <p class="text-muted prof-img-2">
            name of admin
          </p>
        </div>
      </div>
        <div class="d-flex"><i class="fa fa-home mt-3 ml-2 text-muted"></i><%= link_to 'aprove' %></div>
        <div class="d-flex"><i class="fa fa-user mt-3 ml-2 text-muted"></i><%= link_to 'all users' %></div>
    </div>
<% end %>
