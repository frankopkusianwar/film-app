<div class="container mt-5">
  <%= form_with model: @user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :fullname %>
      <%= f.text_field :fullname, required: true, class: 'form-control', placeholder: 'fullname'%>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, class: 'form-control', placeholder: 'name'%>
    </div>
    <div class="form-group">
      <div><%= f.label :picture %></div>
      <div><%= f.file_field :image %></div>
    </div>
    <div class="form-group">
      <div><%= f.label :Coverpicture %></div>
      <div><%= f.file_field :cover_image %></div>
    </div>
    <button type="submit" class="btn btn-primary">Update Acccount</button>
  <% end %>
</div>
