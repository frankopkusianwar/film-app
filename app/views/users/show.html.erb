<div class="container-fluid page-content">
  <div class="row">
    <div class="col-9">
      <div class="cover_image mt-1 row"><%= image_tag @user.cover_image if @user.cover_image.attached? %></div>
      <nav class='opinion_nav mb-3 mt-3'>
      
        <h6>Recent Posts</h6>
        
      </nav>
      <%= link_to "Delete", opinion_path, method: :delete, data: {confirm: "Really delete the post?"}, class: "delete-path" %>
        <%= link_to "Edit", opinion_path, method: :edit, data: {confirm: "Really edit the post?"}, class: "delete-path" %>
      
      
      <%= render 'user_posts'%>

    </div>
    
    <div class="col-3 col-left-border">
    
        <%= render 'user_stats'%>
        <%= render 'follow_list'%>
        
    </div>
  </div>
</div>
