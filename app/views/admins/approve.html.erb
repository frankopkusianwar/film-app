<table class="table table-striped table-dark shadow mt-5 ">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Contact</th>
      <th scope="col">Email</th>
      <th scope="col">Approved</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @users != nil %>
      <% @users.each do |us| %>
        <% if us.approved == false %>
          <tr>
              <th scope="row">1</th>
              <td><%= us.name %></td>
              <td><%= us.phone %></td>
              <td><%= us.email %></td>
              <td><%= us.approved %></td>
              <td><%= link_to 'Approve', "admin_approve/#{us.id}", method: :post%></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
