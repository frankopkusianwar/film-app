<div class="container w-50 mt-5 border border rounded border-light p-5">
  <div class="text-center">
    <h3>Login Here</h3>
  </div>
  <small class="text-danger"><%= alert %></small>
  <%= form_with model: @admin, local: true, :url => sessions_path do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, required: true, id: 'email', class: 'form-control', placeholder: 'email'%>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.text_field :password, required: true, id: 'password', class: 'form-control', placeholder: 'password'%>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  <% end %>
</div>
